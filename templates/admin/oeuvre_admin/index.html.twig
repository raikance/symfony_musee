{% extends 'navigation/admin/nav.html.twig' %}

{% block title %}Oeuvre index{% endblock %}

{% block contents %}
    <h1>Oeuvre index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Auteur</th>
                <th>Creation</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for oeuvre in oeuvres %}
            <tr>
                <td>{{ oeuvre.id }}</td>
                <td>{{ oeuvre.nom }}</td>
                <td>{{ oeuvre.auteur }}</td>
                <td>{{ oeuvre.creation }}</td>
                <td>
                    <a href="{{ path('app_oeuvre_admin_show', {'id': oeuvre.id}) }}">show</a>
                    <a href="{{ path('app_oeuvre_admin_edit', {'id': oeuvre.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_oeuvre_admin_new') }}">Create new</a>
{% endblock %}
